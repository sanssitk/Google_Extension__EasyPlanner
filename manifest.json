{
  "name": "Easy Planner",
  "version": "1.0",
  "description": "Plan your day and motivate you to take action!",
  "permissions": ["storage", "tabs", "contextMenus"],
  "content_security_policy": 
  "script-src 'self' https://cdn.firebase.com https://apis.google.com https://www.gstatic.com; object-src 'self'",
  "background": {
    "scripts": [
      "packages/uuidv4.min.js",
      "js/action-items-Utils.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Logo16.png",
      "32": "images/Logo32.png",
      "48": "images/Logo48.png",
      "128": "images/Logo128.png"
    }
  },
  "icons": {
    "16": "images/Logo16.png",
    "32": "images/Logo32.png",
    "48": "images/Logo48.png",
    "128": "images/Logo128.png"
  },
  "manifest_version": 2
}
